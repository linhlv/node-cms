<!-- Contact Form -->
<!-- In order to set the email address and subject line for the contact form go to the bin/contact_me.php file. -->
<div class="row" data-ng-controller="login.user.ctrl as vm">
    <div class="col-md-4 col-md-offset-4">
        <h4 class="page-header">Login</h3>
        <div class="alert alert-warning" role="alert" data-ng-if="!vm.status">Login fail! Please check your email or password!</div>
        <form role="form" name="f" data-ng-submit="vm.login()" novalidate>
            <div class="form-group">
                <label for="lblEmail">Email</label>
                <div class="controls" data-ng-class="{'has-warning': (f.email.$touched || vm.submitting) && f.email.$error.required}">
                    <input type="email" class="form-control" name="email" id="email" placeholder="Email Address *" data-ng-model="vm.data.email" required data-validation-required-message="Please enter your email address.">
                    <p class="help-block validation-error" data-ng-if="(f.email.$touched || vm.submitting) && f.email.$error.required">Email is required.</p>
                    <p class="help-block validation-error" data-ng-if="(f.email.$touched || vm.submitting) && f.email.$error.email && !f.email.$error.required">Email is incorrect!</p>
                </div>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password <!--a href="/sessions/forgot_password">(forgot password)</a--></label>                
                <div class="controls" data-ng-class="{'has-warning': (f.password.$touched || vm.submitting) && f.password.$error.required}">
                    <input type="password" class="form-control" name="password" id="password" placeholder="Password *" data-ng-model="vm.data.password" required data-validation-required-message="Please enter your password.">
                    <p class="help-block validation-error" data-ng-if="(f.password.$touched || vm.submitting)&& f.password.$error.required">Password is required.</p>
                </div>
            </div>
            <button type="submit" class="btn btn-sm btn-default">Login</button>
        </form>            
    </div>
</div>
<!-- /.row -->