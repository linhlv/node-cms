    <body class="login-content" data-ng-controller="loginCtrl as vm">

        <!-- Login -->
        <div class="lc-block toggled" id="l-login" >
            <div class="input-group m-b-20">
                <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                <div class="fg-line">
                    <input type="text" id="auth_username" class="form-control" placeholder="{{lang 'username'}}" data-ng-model="vm.username">
                </div>
            </div>

            <div class="input-group m-b-20">
                <span class="input-group-addon"><i class="zmdi zmdi-male"></i></span>
                <div class="fg-line">
                    <input type="password" id="auth_password" class="form-control" placeholder="{{lang 'password'}}"  data-ng-model="vm.password">
                </div>
            </div>

            <div class="clearfix"></div>

            <div class="checkbox">
                <label>
                    <input type="checkbox" value="">
                    <i class="input-helper"></i>
                    Keep me signed in
                </label>
            </div>
            <a href="" class="btn btn-login btn-danger btn-float" data-ng-click="vm.login()"><i class="zmdi zmdi-arrow-forward"></i></a>         
        </div>
