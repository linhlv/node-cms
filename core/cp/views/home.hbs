<header id="header" data-current-skin="blue" data-current-skin={{mactrl.currentSkin}}>
    <ul class="header-inner clearfix">
        <li id="menu-trigger" data-target="mainmenu" data-toggle-sidebar data-model-left="mactrl.sidebarToggle.left" data-ng-class="{ 'open': mactrl.sidebarToggle.left === true }">
            <div class="line-wrap">
                <div class="line top"></div>
                <div class="line center"></div>
                <div class="line bottom"></div>  
            </div>
        </li>

        <li class="logo hidden-xs">
            <a data-ui-sref="home" data-ng-click="mactrl.sidebarStat($event)">Getz</a>
        </li>

        <li class="pull-right">
            <top-menu></top-menu>
        </li>
    </ul>

    <!-- Top Search Content -->
    <div id="top-search-wrap">
        <div class="tsw-inner">
            <i id="top-search-close" class="zmdi zmdi-arrow-left" data-ng-click="hctrl.closeSearch()"></i>
            <input type="text">
        </div>
    </div>
</header>


<section id="main">
    <aside id="sidebar" data-ng-class="{ 'toggled': mactrl.sidebarToggle.left === true }">
        <div class="sidebar-inner c-overflow">    
            <profile></profile>
            <sidebar-menu></sidebar-menu>
        </div>

    </aside>
     <section id="content">
        <div class="container">
            <ui-view></ui-view>
        </div>
     </section>
</section>