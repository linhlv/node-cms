<!-- Page Heading/Breadcrumbs -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Products
            <small>{{data.categoryName}}</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="/">Home</a>
            </li>
            <li class="active">Category</li>
        </ol>
    </div>
</div>
<!-- /.row -->



<!-- Products Row -->
<div class="row">
     {{#each data.products}}
        <div class="col-md-4 img-portfolio">
            <a href="/product-item">
                <img class="img-responsive img-hover" src="{{this.imageUrl}}" alt="">                
            </a>
            <h3>
                <a href="/product-item">{{this.code}}</a>
            </h3>
            <p>{{this.size}} - {{this.packaging}}</p>
        </div>
    {{/each}}
</div>
<!-- /.row -->

