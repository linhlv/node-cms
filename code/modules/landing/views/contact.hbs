<div class="row mk" data-ng-controller="contact.ctrl as vm">
    <div class="col-md-8">             
        <form name="f" novalidate data-ng-submit="vm.send()">
            <div class="control-group form-group">
                <div class="controls" data-ng-class="{'has-warning': (f.name.$touched || vm.submitting) && f.name.$error.required}">                    
                    <input type="text" class="form-control" id="name" name="name" placeholder="Full Name *" data-ng-model="vm.data.name" required data-validation-required-message="Please enter your name.">
                    <p class="help-block validation-error" data-ng-if="(f.name.$touched || vm.submitting) && f.name.$error.required">Full name is required.</p>
                </div>
            </div>
            <div class="control-group form-group">
                <div class="controls" data-ng-class="{'has-warning': (f.phone.$touched || vm.submitting) && f.phone.$error.required}">
                    <input type="tel" class="form-control" name="phone" id="phone" placeholder="Phone Number *" data-ng-model="vm.data.phone" required data-validation-required-message="Please enter your phone number.">
                    <p class="help-block validation-error" data-ng-if="(f.phone.$touched || vm.submitting)&& f.phone.$error.required">Phone number is required.</p>
                </div>
            </div>
            <div class="control-group form-group">
                <div class="controls" data-ng-class="{'has-warning': (f.email.$touched || vm.submitting) && f.email.$error.required}">
                    <input type="email" class="form-control" name="email" id="email" placeholder="Email Address *" data-ng-model="vm.data.email" required data-validation-required-message="Please enter your email address.">
                    <p class="help-block validation-error" data-ng-if="(f.email.$touched || vm.submitting) && f.email.$error.required">Email is required.</p>
                    <p class="help-block validation-error" data-ng-if="(f.email.$touched || vm.submitting) && f.email.$error.email && !f.email.$error.required">Email is incorrect!</p>
                </div>
            </div>
            <div class="control-group form-group">
                <div class="controls"  data-ng-class="{'has-warning': (f.message.$touched || vm.submitting) && f.message.$error.required}">
                    <textarea rows="10" cols="100" class="form-control" name="message" id="message" placeholder="Message *" data-ng-model="vm.data.message" required data-validation-required-message="Please enter your message" maxlength="999" style="resize:none"></textarea>
                    <p class="help-block validation-error" data-ng-if="(f.email.$touched || vm.submitting) && f.message.$error.required">Message is required.</p>
                </div>
            </div>
            <p data-ng-bind="submitting"></p>

            <div id="success"></div>
            <!-- For success/fail messages -->
            <button type="submit" class="btn btn-primary">Send Message</button>
        </form>
    </div>

</div>
